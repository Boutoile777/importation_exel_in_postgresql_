<body class="bg-gray-100 flex items-center justify-center min-h-screen">

  <div class="bg-white p-8 rounded shadow-md w-full max-w-md">
    <h1 class="text-2xl font-bold mb-6 text-center">Cr√©er un compte</h1>

    <form id="signupForm" class="space-y-4">
      <div>
        <label for="nom" class="block text-gray-700">Nom</label>
        <input
          type="text"
          id="nom"
          name="nom"
          placeholder="ABDALLAH"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="prenom" class="block text-gray-700">Pr√©nom</label>
        <input
          type="text"
          id="prenom"
          name="prenom"
          placeholder="Karim"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="email" class="block text-gray-700" placeholder="serge@fnda.bj">Email</label>
        <input
          type="email"
          id="email"
          name="email"
          placeholder="sergio@fnda.bj"
          required
          class="w-full px-3 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>

      <div>
        <label for="motdepasse" class="block text-gray-700">Mot de passe</label>
        <div class="relative">
        <input
            id="mot_de_passe"
            type="password"
            name="mot_de_passe"
            placeholder="Mot de passe"
            class="border p-2 rounded w-full"
        />
        <button
            type="button"
            id="togglePassword"
            class="absolute right-2 top-1/2 transform -translate-y-1/2"
            aria-label="Afficher ou masquer le mot de passe"
        >
            üëÅÔ∏è
        </button>
        </div>
      </div>

      <button
        type="submit"
        class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition-colors"
      >
        S'inscrire
      </button>
    </form>

    <p class="mt-4 text-center text-gray-600">
      D√©j√† un compte ?
      <a href="signin.html" class="text-blue-600 hover:underline">Se connecter</a>
    </p>

    <p id="message" class="mt-4 text-center text-red-600"></p>
  </div>

  <script>
    const form = document.getElementById('signupForm');
    const message = document.getElementById('message');
    const togglePassword = document.getElementById('togglePassword');
    const password = document.getElementById('mot_de_passe');


    // Initialiser les champs
    window.addEventListener('load', () => {
    document.querySelectorAll('input').forEach(input => input.value = '');
    });


     // Voir ou masquer le mot de passe

     
    togglePassword.addEventListener('click', () => {
    // V√©rifie le type actuel
    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
    // Change le type en 'text' ou 'password'
    password.setAttribute('type', type);

    // Optionnel : changer l'ic√¥ne du bouton pour indiquer l'√©tat
    togglePassword.textContent = type === 'password' ? 'üëÅÔ∏è' : 'üôà';
    });



  // connexion au backend 



  form.addEventListener('submit', async (e) => {
  e.preventDefault();
  message.textContent = '';

 const data = {
  nom: form.nom.value.trim(),
  prenom: form.prenom.value.trim(),
  email: form.email.value.trim(),
  mot_de_passe: form.mot_de_passe.value,
};


  try {
    const response = await fetch('http://localhost:5000/auth/signup', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify(data),
    });


    const result = await response.json();

    if (response.ok) {
      message.style.color = 'green';
      message.textContent = 'Inscription r√©ussie ! Vous pouvez maintenant vous connecter.';
      form.reset();

      // Redirection apr√®s quelques secondes (optionnel)
      setTimeout(() => {
        window.location.href = 'signin.html';
      }, 2000);
    } else {
      message.style.color = 'red';
      message.textContent = result.error || 'Une erreur est survenue.';
    }
  } catch (err) {
    message.style.color = 'red';
    message.textContent = 'Impossible de contacter le serveur.';
  }
});

  </script>
</body>
